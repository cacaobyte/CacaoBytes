---
import { Instagram, Facebook, Linkedin, Youtube } from "lucide-react";
import { motion } from "framer-motion";
---

<section class="py-16 bg-gray-50 text-gray-900">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl font-bold text-red-500">Síguenos en Redes Sociales</h2>
    <p class="text-gray-600 mt-2 text-lg">
      Conéctate con <strong>CacaoByte S.A.</strong> en tus plataformas favoritas y descubre contenido, novedades y más.
    </p>

    <!-- Cards con íconos -->
    <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 mt-10">
      <!-- Instagram -->
      <motion.a
        whileHover={{ scale: 1.1 }}
        whileTap={{ scale: 0.95 }}
        href="https://www.instagram.com/cacaobyte_sa/"
        target="_blank"
        className="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition text-center"
      >
        <Instagram size={36} className="mx-auto text-pink-500" />
        <p class="mt-2 font-semibold">Instagram</p>
      </motion.a>

      <!-- Facebook -->
      <motion.a
        whileHover={{ scale: 1.1 }}
        whileTap={{ scale: 0.95 }}
        href="https://www.facebook.com/profile.php?id=61574315798583"
        target="_blank"
        className="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition text-center"
      >
        <Facebook size={36} className="mx-auto text-blue-600" />
        <p class="mt-2 font-semibold">Facebook</p>
      </motion.a>

      <!-- LinkedIn -->
      <motion.a
        whileHover={{ scale: 1.1 }}
        whileTap={{ scale: 0.95 }}
        href="https://www.linkedin.com/company/cacaobyte-sa/"
        target="_blank"
        className="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition text-center"
      >
        <Linkedin size={36} className="mx-auto text-blue-800" />
        <p class="mt-2 font-semibold">LinkedIn</p>
      </motion.a>

      <!-- YouTube -->
      <motion.a
        whileHover={{ scale: 1.1 }}
        whileTap={{ scale: 0.95 }}
        href="https://www.youtube.com/@CacaoByteSA"
        target="_blank"
        className="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition text-center"
      >
        <Youtube size={36} className="mx-auto text-red-600" />
        <p class="mt-2 font-semibold">YouTube</p>
      </motion.a>

      <!-- TikTok -->
      <motion.a
        whileHover={{ scale: 1.1 }}
        whileTap={{ scale: 0.95 }}
        href="https://www.tiktok.com/@cacaobyte"
        target="_blank"
        className="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition text-center"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" viewBox="0 0 24 24" class="mx-auto text-black">
          <path d="M16.32 1.009a5.38 5.38 0 0 0 3.657 1.39v3.068a8.449 8.449 0 0 1-3.584-.792v7.93c0 3.68-2.528 5.84-5.288 5.84-1.121.016-2.215-.416-3.026-1.2a4.202 4.202 0 0 1-1.274-3.025c0-2.392 1.905-4.34 4.3-4.34.18 0 .36.008.536.024v3.184c-.185-.024-.373-.036-.56-.036a1.333 1.333 0 0 0-1.336 1.36c0 .344.137.672.382.916.245.243.577.379.922.379 1.104 0 2.168-.912 2.168-2.6V1h3.107z"/>
        </svg>
        <p class="mt-2 font-semibold">TikTok</p>
      </motion.a>
    </div>
  </div>
</section>

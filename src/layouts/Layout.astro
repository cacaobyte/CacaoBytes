---
import "../styles/global.css";
import { Navbar } from "@/components/Navbar"; 
import Footer from "@/components/Footer.astro";
import logo from '../assets/CacaoByte.png';

const { 
  title = "CacaoByte S.A", 
  description = "Descubre nuestras soluciones digitales.", 
  image = "/favicon.png", // 游녣 Cambiar a favicon real
  url = "https://example.com", 
  twitter = "@cacaobyte" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- 游릭 Favicon -->
  <link rel="icon" type="image/png" href="/favicon.png"> <!-- Icono para navegadores -->
  <link rel="apple-touch-icon" href="/favicon.png"> <!-- Icono para Apple -->
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"> <!-- Opci칩n alternativa -->
  
  <!-- 游릭 SEO Din치mico -->
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- 游릭 Open Graph (SEO para Redes Sociales) -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:url" content={url} />

  <!-- 游릭 Twitter Card (SEO para Twitter) -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
  <meta name="twitter:site" content={twitter} />

  <slot name="head" />
</head>
<body class="bg-gray-100 text-gray-900">
  <Navbar client:only="react"/> <!-- 游댳 Insertamos la navbar aqu칤 -->

  <!-- 游늷 Contenido din치mico -->
  <main class="pt-20">
    <slot />
  </main>

  <Footer />

    <!-- 游댮 Script de Zoho SalesIQ -->
    <script type="text/javascript">
      window.$zoho = window.$zoho || {};
      $zoho.salesiq = $zoho.salesiq || { ready: function () {} };
    </script>
    <script
      id="zsiqscript"
      src="https://salesiq.zohopublic.com/widget?wc=siq71239a3fd786a07e03777b11c357593d21f426bfe4eb1c6dd9288a7328310ebb"
      defer>
    </script>
    
</body>
</html>
